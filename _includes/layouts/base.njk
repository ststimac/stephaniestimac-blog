<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include "global/meta.njk" %}
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,600" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.typekit.net/njd7atr.css">
    <link rel="icon" href="https://stephaniestimac.com/imgs/favicon.ico" type="image/png">

  </head>
  <body>
    <header>
      <h1 class="home container">{{ metadata.title }}</h1>
    </header>
    <div class="container grid--home">
      <div class="sidebar">
        <nav>
          <ul class="nav">
            {%- for nav in collections.nav | reverse -%}
            <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
            {%- endfor -%}
            <li class="nav-item"><a href="https://stephaniestimac.com/about">About Me</a></li>
            <li class="nav-item"><a href="https://stephaniestimac.com">Portfolio</a></li>
            <li class="nav-item"><a href="https://twitter.com/seaotta">Twitter</a></li>
            <li class="nav-item"><a href="https://www.manning.com/books/design-for-developers?utm_source=stimac&utm_medium=affiliate&utm_campaign=book_stimac_design_4_19_22&a_aid=stimac&a_bid=5f6ba095">Design for Developers Book</a></li>
          </ul>
          <div class="sidebar-book">
            <a href="https://www.manning.com/books/design-for-developers?utm_source=stimac&utm_medium=affiliate&utm_campaign=book_stimac_design_4_19_22&a_aid=stimac&a_bid=5f6ba095"><img src="img/designfordevelopers.png" alt="Book cover for Design for Developers" /></a>
          </div>
        </nav>
      </div>
        <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
            {{ content | safe }}
        </main>
    </div>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
